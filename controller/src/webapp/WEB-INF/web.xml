<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <servlet>
        <servlet-name>SampleRESTApp</servlet-name>
        <servlet-class>org.spice.sample.SampleREST</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SMS</servlet-name>
        <servlet-class>org.spice.sms.SMS</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Storefront</servlet-name>
        <servlet-class>org.spice.storefront.Storefront</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Common</servlet-name>
        <servlet-class>org.spice.common.Common</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SampleRESTApp</servlet-name>
        <url-pattern>/sample_rest/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SMS</servlet-name>
        <url-pattern>/sms/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Storefront</servlet-name>
        <url-pattern>/storefront/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Common</servlet-name>
        <url-pattern>/common/*</url-pattern>
    </servlet-mapping>
</web-app>
